<div class="form--contained">
	<h1>Editing Main Menu</h1>

	<%= render 'form' %>
	<div class="wrapper--flex">
		<%= link_to admin_main_menus_path, class: 'button button--primary as--half' do %>
			<%= @main_menu.back_lang(current_user) %>
		<% end %>

		<%= link_to admin_main_menu_path(@main_menu), method: :delete, data: { confirm: 'Are you sure?' }, class: 'button button--primary button--delete as--half' do %>
			<%= @main_menu.delete_lang(current_user) %>
		<% end %>

	</div>
</div>
