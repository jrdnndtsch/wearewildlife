<fieldset>
  <div class="wrapper--flex">
    <div class="field en-<%= current_user.preferred_language %> col--two">
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>
    <div class="field <%= current_user.preferred_language %>-fr col--two">
      <%= f.label @main_menu.title_lang(current_user) %><br>
      <%= f.text_field :fr_title %>
    </div>

  </div>

  <div class="wrapper--flex">
    <div class="field en-<%= current_user.preferred_language %> col--two">
      <%= f.label :link %><br>
      <%= f.text_field :link %>
    </div>
    <div class="field <%= current_user.preferred_language %>-fr col--two">
      <%= f.label @main_menu.link_lang(current_user) %><br>
      <%= f.text_field :fr_link %>
    </div>
  </div>

  <div class="wrapper--flex">
    <div class="field en-<%= current_user.preferred_language %> col--two">
      <%= f.label :description %><br>
      <%= f.text_field :description %>
    </div>
    <div class="field <%= current_user.preferred_language %>-fr col--two">
      <%= f.label @main_menu.description_lang(current_user) %><br>
      <%= f.text_field :fr_description %>
    </div>
  </div>


  <div class="field">
    <%= f.hidden_field :main_menu_id, value: @main_menu.id  %>
  </div>
  <div class="fieldset">
    <%= f.hidden_field :_destroy %>
    <%= link_to "#", class: "remove_fields" do %>
      <%= @main_menu.remove_lang(current_user) %>
    <% end %>
  </div>
</fieldset>