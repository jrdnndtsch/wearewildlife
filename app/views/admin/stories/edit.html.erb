<div class="form--contained">
	<h1><%= @story.editing_lang(current_user) %> <%= @story.title_used(current_user, @story) %></h1>
	<div class="admin--module">
		<p><%= @story.recent_updates_lang(current_user) %></p>
		<% @updated_by.each do |update|%>
			<li><%= update.to_h[:user].email%> | <%= update.to_h[:time]%></li>
		<% end %>
	</div>
	<%= render 'form' %>
	<div class="wrapper--flex">
		<%= link_to admin_stories_path, class: 'button button--primary as--half' do %>
			<%= @story.back_lang(current_user) %>
		<% end %>
		<%= link_to admin_story_path(@story), method: :delete, data: { confirm: 'Are you sure?' }, class: 'button button--primary as--half button--delete' do %>
			<%= @story.delete_lang(current_user) %>
		<% end %>
	</div>
</div>




