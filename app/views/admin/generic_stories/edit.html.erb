<div class="form--contained">
	<h1><%= @generic_story.editing_lang(current_user) %> <%= @generic_story.title_used(current_user, @generic_story) %></h1>
	<div class="admin--module">
		<p><%= @generic_story.recent_updates_lang(current_user) %></p>
		<% @updated_by.each do |update|%>
			<li><%= update.to_h[:user].email%> | <%= update.to_h[:time]%></li>
		<% end %>
	</div>
	<%= render 'form' %>
	<div class="wrapper--flex">
		<%= link_to admin_generic_stories_path, class: 'button button--primary as--half' do %>
				<%= @generic_story.back_lang(current_user) %>
			<% end %>

		<%= link_to admin_generic_story_path(@generic_story), method: :delete, data: { confirm: 'Are you sure?' }, class: 'button button--primary button--delete as--half' do %>
				<%= @generic_story.delete_lang(current_user) %>
			<% end %>

	</div>
</div>
