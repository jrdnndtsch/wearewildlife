<div class="form--contained">
	<h1><%= @featured_donor.editing_lang(current_user) %> <%= @featured_donor.title_used(current_user, @featured_donor) %></h1>
	<div class="admin--module">
		<p><%= @featured_donor.recent_updates_lang(current_user) %></p>
		<% @updated_by.each do |update|%>
			<li><%= update.to_h[:user].email%> | <%= update.to_h[:time]%></li>
		<% end %>
	</div>
	<%= render 'form' %>
	<div class="wrapper--flex">
		<%= link_to admin_featured_donors_path, class: 'button button--primary as--half' do %>
			<%= @featured_donor.back_lang(current_user) %>
		<% end %>

		<%= link_to admin_featured_donor_path(@featured_donor), method: :delete, data: { confirm: 'Are you sure?' }, class: 'button button--primary button--delete as--half' do %>
			<%= @featured_donor.delete_lang(current_user) %>
		<% end %>
	</div>
</div>
