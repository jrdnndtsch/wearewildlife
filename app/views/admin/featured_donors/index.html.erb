<h1>Listing Featured Donors</h1>

<table>
  <thead>
    <tr>
      <th>Short description</th>
      <th>Link</th>
      <th>photo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @featured_donors.each do |featured_donor| %>
      <tr>
        <td><%= featured_donor.short_description %></td>
        <td><%= featured_donor.link %></td>
        <td><%= image_tag featured_donor.photo.url('header')%></td>
        <td><%= link_to 'Edit', edit_admin_featured_donor_path(featured_donor) %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Featured donor', new_admin_featured_donor_path %>
