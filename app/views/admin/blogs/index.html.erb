

<h1>Listing Blogs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Date</th>
      <th>Short description</th>
      <th>Link</th>
      <th>Video link</th>
      <th>photo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.author %></td>
        <td><%= blog.date %></td>
        <td><%= blog.short_description %></td>
        <td><%= blog.link %></td>
        <td><%= blog.video_link %></td>
        <td><%= image_tag blog.photo.url('header')%></td>
        <td><%= link_to 'Show', admin_blog_path(blog) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blog', new_admin_blog_path %>
